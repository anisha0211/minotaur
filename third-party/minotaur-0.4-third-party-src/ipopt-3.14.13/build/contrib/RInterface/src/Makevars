# C++ Compiler command
CXX = /home/mech/btech/me1222013/miniconda3/envs/minotaur-dev/bin/x86_64-conda-linux-gnu-c++

# C++ Compiler options
IPOPT_CXXFLAGS = -fvisibility-inlines-hidden -fmessage-length=0 -march=nocona -mtune=haswell -ftree-vectorize -fPIC -fstack-protector-strong -fno-plt -O2 -ffunction-sections -pipe -isystem /home/mech/btech/me1222013/miniconda3/envs/minotaur-dev/include

# additional C++ Compiler options for linking
IPOPT_CXXLINKFLAGS =  -Wl,--rpath -Wl,/home/mech/btech/me1222013/minotaur/third-party/lib

prefix=/home/mech/btech/me1222013/minotaur/third-party
exec_prefix=${prefix}

# Include directories
IPOPT_INCL = `PKG_CONFIG_PATH=/home/mech/btech/me1222013/minotaur/third-party/lib/pkgconfig: x86_64-conda-linux-gnu-pkg-config --cflags ipopt`
#IPOPT_INCL = -I${prefix}/include/coin -I/home/mech/btech/me1222013/minotaur/third-party/include/coin-or/mumps   -DIPOPTLIB_BUILD

# Linker flags
IPOPT_LIBS = `PKG_CONFIG_PATH=/home/mech/btech/me1222013/minotaur/third-party/lib/pkgconfig: x86_64-conda-linux-gnu-pkg-config --libs ipopt`
#IPOPT_LIBS = -L${exec_prefix}/lib -lipopt -L/home/mech/btech/me1222013/minotaur/third-party/lib -L/home/mech/btech/me1222013/miniconda3/envs/minotaur-dev/lib -lcoinmumps -llapack -lblas   -lm  -ldl

# Define objects for R to build
OBJECTS = ipoptr.o IpoptRNLP.o IpoptRJournal.o

# Convert to R macros
PKG_LIBS = ${IPOPT_CXXLINKFLAGS} ${IPOPT_LIBS}
PKG_CXXFLAGS = ${IPOPT_CXXFLAGS} ${IPOPT_INCL} -I/home/mech/btech/me1222013/minotaur/third-party/minotaur-0.4-third-party-src/ipopt-3.14.13/contrib/RInterface/src
